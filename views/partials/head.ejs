<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="<%= locals.metaDescription || 'Blogify is a platform for writing and reading blogs.' %>">
<meta property="og:type" content="website">
<meta property="og:title" content="<%= locals.ogTitle || locals.pageTitle || 'Blogify' %>">
<meta property="og:description" content="<%= locals.metaDescription || 'Blogify is a platform for writing and reading blogs.' %>">
<meta property="og:image" content="<%= locals.ogImage || '/images/default.png' %>">
<script>
    (function () {
        try {
            var savedTheme = localStorage.getItem("theme");
            var theme = savedTheme === "dark" ? "dark" : "light";
            document.documentElement.setAttribute("data-theme", theme);
        } catch (error) {
            document.documentElement.setAttribute("data-theme", "light");
        }
    })();
</script>
